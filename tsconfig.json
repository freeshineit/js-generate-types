{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "allowJs": true,                                  
    "checkJs": true,                                  
    "declaration": true,                             
    "emitDeclarationOnly": true,                      
    "outDir": "./types",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
